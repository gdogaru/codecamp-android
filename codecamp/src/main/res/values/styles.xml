<resources>

    <style name="Codecamp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/windowBgd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:spinnerItemStyle">@style/CodecampSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/CodecampSpinnerExpandedItem</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.ActionBar">
        <!--<item name="android:background">@drawable/title_background</item>-->
        <item name="android:background">@android:color/black</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="CodecampSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/spinnerItem</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="CodecampSpinnerExpandedItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="CodecampAppBarLayout" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="CodecampToolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>


    <style name="title_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="field_label" parent="text">
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="session_item_title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="session_item_time">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/sec_list_item</item>
    </style>

    <style name="text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="header_1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/header_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="header_2">
        <item name="android:textSize">@dimen/header_2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="user_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="sessionRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

    <style name="description" parent="field_label">
        <item name="android:textStyle">italic</item>
    </style>


    <style name="FeedbackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/FeedbackDialogTitle</item>
    </style>

    <style name="FeedbackDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="ListPopupWindow">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ChevronLarge">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/chevron_right</item>
    </style>


</resources>