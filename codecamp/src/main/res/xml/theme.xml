<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CodecampTheme" parent="@android:style/Theme.NoTitleBar">
        <item name="android:windowBackground">@color/windowBgd</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:spinnerItemStyle">@style/CodecampSpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/CodecampSpinnerExpandedItem</item>
    </style>

    <style name="CodecampSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/spinnerItem</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="CodecampSpinnerExpandedItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

</resources>