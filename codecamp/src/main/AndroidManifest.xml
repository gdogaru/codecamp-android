<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gdogaru.codecamp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="false" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:fullBackupContent="false"
        android:appComponentFactory="androidx"
        android:label="@string/app_name"
        android:logo="@drawable/codecamp_title"
        android:theme="@style/Codecamp"
        android:icon="@mipmap/ic_launcher"
        tools:ignore="GoogleAppIndexingWarning"
        tools:replace="android:appComponentFactory">

        <activity
            android:name=".view.SplashScreenActivity"
            android:noHistory="true"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".view.LoadingDataActivity" />

        <activity
            android:name=".view.MainActivity"
            android:launchMode="singleTop" />
        <activity android:name=".view.agenda.AgendaFragment">

        </activity>
        <activity
            android:name=".view.session.SessionExpandedFragment"
            android:parentActivityName=".view.agenda.AgendaFragment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.agenda.AgendaFragment" />
        </activity>
        <activity android:name=".view.sponsors.SponsorsFragment">

        </activity>
        <activity android:name=".view.speaker.SpeakersFragment">

        </activity>
        <activity
            android:name=".view.speaker.SpeakerExpandedFragment"
            android:parentActivityName=".view.speaker.SpeakersFragment">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.speaker.SpeakersFragment" />
        </activity>

        <uses-library android:name="com.google.android.maps" />

        <receiver
            android:name=".svc.jobs.AddReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="com.evernote.android.job.ADD_JOB_CREATOR"/>
            </intent-filter>
        </receiver>

        <meta-data android:name="google_analytics_adid_collection_enabled" android:value="false" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_api_key" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

    </application>

</manifest>