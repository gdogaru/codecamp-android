<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Codecamp" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background_window</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/background_window</item>
        <item name="android:textColor">@color/text_color</item>
        <!--<item name="android:spinnerItemStyle">@style/CodecampSpinnerItem</item>-->
        <!--<item name="android:spinnerDropDownItemStyle">@style/CodecampSpinnerExpandedItem</item>-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.ActionBar">
        <!--<item name="android:background">@drawable/title_background</item>-->
        <item name="android:background">@android:color/black</item>
        <item name="android:displayOptions">showHome|useLogo</item>
    </style>

    <style name="CodecampSpinnerItem" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textAppearance">@style/spinnerItem</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="spinnerItem" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>


    <style name="CodecampSpinnerExpandedItem">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Codecamp.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Codecamp.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="layout_collapseMode">pin</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Dark</item>
    </style>


    <style name="title_bar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="field_label" parent="text">
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="session_item_title">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/header_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="session_item_time">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/sec_list_item</item>
    </style>

    <style name="text">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="header_1">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textSize">@dimen/header_1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="header_2">
        <item name="android:textSize">@dimen/header_2</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="user_input">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="sessionRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">40dip</item>
        <item name="android:maxHeight">40dip</item>
    </style>

    <style name="description" parent="field_label">
        <item name="android:textStyle">normal</item>
    </style>


    <style name="FeedbackDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/FeedbackDialogTitle</item>
    </style>

    <style name="FeedbackDialogTitle" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
    </style>

    <style name="ListPopupWindow">
        <item name="android:popupBackground">@color/black</item>
        <item name="android:textColor">@color/text_white</item>
    </style>

    <style name="ChevronLarge">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/chevron_right</item>
    </style>

    <style name="Codecamp.Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/ic_toggle_calendar_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="Codecamp.AgendaToggle">
        <item name="android:buttonStyleToggle">@style/Codecamp.Widget.Button.Toggle</item>
        <item name="android:textOn" />
        <item name="android:textOff" />
    </style>


    <style name="Codecamp.Dialog" />

    <style name="Codecamp.Dialog.Button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/button_dialog</item>
    </style>

    <style name="Codecamp.Dialog.Cancel" parent="Codecamp.Dialog.Button">
        <item name="android:background">@drawable/button_cancel</item>
    </style>

    <style name="Codecamp.Dialog.Text">
        <item name="android:textStyle">normal</item>
        <item name="android:color">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Local copy of android:Theme.Holo.Dialog.Alert -->
    <style name="Codecamp.AlertDialogThemeCompat" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="colorPrimary" tools:ignore="NewApi">@color/text_white</item>
        <item name="android:fitsSystemWindows">false</item>
    </style>


    <color name="text_color">#e7e7e7</color>
</resources>