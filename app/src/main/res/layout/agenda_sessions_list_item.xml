<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="1dp"
    android:background="@drawable/list_item_background"
    android:orientation="vertical"
    android:paddingBottom="3dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="3dp">

    <TextView
        android:id="@+id/sessionName"
        style="@style/session_item_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        tools:text="Android made simple" />

    <TextView
        android:id="@+id/sessionSpeaker"
        style="@style/session_item_time"
        tools:text="Gabriel Dogaru" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sessionTime"
            style="@style/session_item_time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            tools:text="10:30" />

        <TextView
            android:id="@+id/sessionPlace"
            style="@style/session_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="sala napoli" />
    </LinearLayout>


</LinearLayout>
